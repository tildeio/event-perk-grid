    ".": "./dist/index.js",
    "./custom-element": "./dist/custom-element.js",
    "./index.css": "./dist/index.css"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tildeio/event-perk-grid.git"
