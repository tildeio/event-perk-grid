{
  "name": "event-perk-grid",
  "version": "0.1.11",
  "description": "A utility for reading and displaying Event Perk Grids.",
  "keywords": [],
  "homepage": "https://tildeio.github.io/event-perk-grid",
  "bugs": {
    "url": "https://github.com/tildeio/event-perk-grid/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tildeio/event-perk-grid.git"
  },
  "license": "MIT",
  "author": "Tilde Engineering <engineering@tilde.io> (https://tilde.io)",
  "exports": {
    ".": "./dist/index.js",
    "./custom-element": "./dist/custom-element.js",
    "./index.css": "./dist/index.css"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build:test": "webpack --mode development -c webpack.tests.config.js",
    "build:testem": "TESTEM=true webpack --mode development -c webpack.tests.config.js",
    "build": "webpack --mode production",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:!(fix)\"",
    "lint:fix": "npm-run-all --continue-on-error lint:*:fix",
    "start": "webpack serve --open --mode development -c webpack.tests.config.js",
    "test:server": "testem",
    "test": "testem ci",
    "docs": "typedoc",
    "docs:deploy": "yarn docs && cd docs && yarn ember deploy production",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/dotenv-webpack": "^7.0.3",
    "@types/qunit": "^2.11.3",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "dotenv-webpack": "^7.1.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-qunit": "^7.2.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "msw": "^0.36.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "qunit": "^2.18.2",
    "qunit-dom": "^2.0.0",
    "release-it": "^14.2.1",
    "release-it-lerna-changelog": "^3.1.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.4.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "testem": "^3.6.0",
    "ts-loader": "^9.2.8",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "msw": {
    "workerDirectory": "tests"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "hooks": {
      "before:init": [
        "yarn install",
        "yarn lint",
        "yarn build",
        "yarn test",
        "yarn docs"
      ],
      "after:release": [
        "yarn docs:deploy",
        "echo Successfully released ${name} v${version} to ${repo.repository}."
      ]
    }
  },
  "volta": {
    "node": "14.18.3",
    "yarn": "1.22.17"
  }
}
